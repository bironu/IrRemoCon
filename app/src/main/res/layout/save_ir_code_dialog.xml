<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_ir_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_label_ir_code_name"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/edit_ir_code_name" />

    <EditText
        android:id="@id/edit_ir_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/label_ir_code_name" />
</RelativeLayout>